@model Quiz.Models.DapAnViewModels.CreateViewModel

    @{
        ViewData["Title"] = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Create</h2>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>DapAn</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoiDungCauHoi" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <p>@Model.NoiDungCauHoi</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="IsTrue" />
                        <label asp-for="IsTrue"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NoiDungDapAn" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="NoiDungDapAn" class="form-control" />
                    <span asp-validation-for="NoiDungDapAn" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        <input asp-for="CauHoiId" type="hidden" value="@Model.CauHoiId" />
    </form>

    <div>
        <a asp-controller="CauHois" asp-action="Details" asp-route-id="@Model.CauHoiId">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }