@model Quiz.Models.DeThi

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>DeThi</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ten)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ten)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="PickQuestion" asp-route-id="@Model.DeThiId">Add Question</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Question
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.CauHois)
            {
                <tr>
                    <td>
                        @item.NoiDung
                    </td>
                    <td>
                        <a asp-action="DeleteQuestion" asp-route-id="@Model.DeThiId" asp-route-cauHoi="@item.CauHoiId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.DeThiId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>