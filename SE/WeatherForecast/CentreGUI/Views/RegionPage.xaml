                                        <myControls:GridEx.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </myControls:GridEx.RowDefinitions>
                                        <myControls:GridEx.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition Width="7*" />
                                        </myControls:GridEx.ColumnDefinitions>

