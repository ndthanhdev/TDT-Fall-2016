                                                    RenderTransformOrigin="0.5,0.5"
                                                    Stretch="Uniform" />
                                            </Grid>

                                            <TextBlock
                                                Grid.Column="1"
                                                FontSize="24"
                                                Text="{Binding Name}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Orientation="Horizontal">
                                            <Grid
                                                Grid.Column="1"
